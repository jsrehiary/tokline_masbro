                <form class="d-flex" role="search" action="/search">
                    <input class="form-control me-2" type="search" placeholder="Find something..." aria-label="Search" name="q">
                    <button class="btn btn-outline-dark" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
        <div class="row">
            <div class="col">
                <h1 class="p-3 bg-dark bg-opacity-10 border border-dark border-start-0 rounded-end">DB Test, Express JS</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="container-sm overflow-x-auto">
                    <table class="table table-striped border border-dark">
                        <thead>
                            <tr>
                                <th scope="col">Person ID</th>
                                <th scope="col">Username</th>
                                <th scope="col">Password</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col" colspan="2">Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let user of users) { %>
                            <tr>
                                    <th scope="row"><%= user.PersonID %></th>
                                    <td><%= user.Username %></td>
                                    <td>
                                        <code><%= user.Password %></code>
                                    </td>
                                    <td><%= user.Email %></td>
                                    <td><%= user.Phone %></td>
                                    <td><button onclick="alert('Sedang dalam tahap pengembangan !')" class="btn btn-outline-dark">Update</button></td>
                                    <td>
                                        <a href="/remove/<%=user.PersonID%>">
                                            <button class="btn btn-outline-dark">Delete</button>
                                        </a>
                                    </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="container-sm bg-dark bg-opacity-10">
                    <form action="/add" method="POST" class="p-5">
                        <legend>Form Login Kayaknya</legend>
                        <div class="mb-3">
                            <label for="InputUsername1" class="form-label">Username</label>
                            <input type="text" class="form-control" id="InputUsername1" name="Username" required>
                        </div>
                        <div class="mb-3">
                            <label for="InputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" id="InputPassword1" name="Password" required>
                        </div>
                        <div class="mb-3">
                            <label for="InputEmail1" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp"
                                name="Email" required>
                            <div id="emailHelp" class="form-text">Kita tidak akan membagikan email anda ke pihak lain.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="InputPhone1" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="InputPhone1" name="Phone" required>
                        </div>
                        <button type="submit" class="btn btn-outline-dark">Add Data</button>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous">
        </script>
</body>

</html>